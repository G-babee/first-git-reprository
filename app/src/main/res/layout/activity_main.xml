<?xml version="1.0" encoding="utf-8"?>
    <!--This is the activity main xml file that explains ConstraintLayout
    of the application with attributes such as layout width and
     layout height set to match the parent respectively-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--This is TextView layout, with the text "Hello Gloria" as its description.
    It can be changed as needed. The other layouts allows users to design features
    using tools in the Layout editor as needed-->
    <!--Comment on GIT repository-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Gloria, Welcome to GIT!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>